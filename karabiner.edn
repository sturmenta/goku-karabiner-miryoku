 :main [
        ;; ─────────────────────────────────────────────────────────────────────────────
        {:des "Base characters" :rules
         [;
          ;
          ; NOTE: use the mappings from "froms" to map all keys
          ;
          ;
          ;; ───────────────────────────────
          ;;
          ;; left side
          ;;
          ;;
          [:-q                          :q]
          [:-w                          :w]
          [:-f                          :f]
          [:-p                          :p]
          [:-b                          :b]
          ;; ───────────────────────────────
          [:-a                          :a]
          [:-r                          :r]
          [:-s                          :s]
          [:-t                          :t]
          [:-g                          :g]
          ;; ───────────────────────────────
          [:-z                          :z]
          [:-x                          :x]
          [:-c                          :c]
          [:-d                          :d]
          [:-v                          :v]
          ;;  ───────────────────────────────
          [:-escape                     :escape]
          [:-spacebar                   :spacebar]
          [:-tab                        :tab]

          ;;  ───────────────────────────────
          ;;
          ;; right side
          ;;
          ;;
          [:-j                          :j]
          [:-l                          :l]
          [:-u                          :u]
          [:-y                          :y]
          [:-quote                      :quote]
          ;; ───────────────────────────────
          [:-m                          :m]
          [:-n                          :n]
          [:-e                          :e]
          [:-i                          :i]
          [:-o                          :o]
          ;; ───────────────────────────────
          [:-k                          :k]
          [:-h                          :h]
          [:-comma                      :comma]
          [:-period                     :period]
          [:-slash                      :slash]
          ;; ───────────────────────────────
          [:-return_or_enter            :return_or_enter]
          [:-delete_or_backspace        :delete_or_backspace]
          [:-delete_forward             :delete_forward]

          ; ignore another keys
          [:any_key :vk_none]
          [:any_consumer :vk_none]
          ]}
        ;; ─────────────────────────────────────────────────────────────────────────────
       ]
 }
