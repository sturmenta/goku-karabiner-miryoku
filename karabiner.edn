{;;
 ;; only map for external-keyboard Keychron K2 v2
 :devices {:only-keychron [{:product_id 591 :vendor_id 1452}]}

 :main [;;
        ;; ──────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────
        {:des "Layer 1 (x - esc - media)"
         :rules [:only-keychron
                 ;
                 ; turn on layer-1 when keep pressed x -- if alone = escape
                 [:x ["layer-1" 1] nil {:afterup ["layer-1" 0] :alone :escape}]
                 :layer-1 ; only allow below commands to work if this is true
                 ;
                 ;────────────────────────────────────────────────────────────────────────────────────────────
                 ;
                 ;  left side
                 ;
                 ; ── row 1 ───────────────────────────────────────────────────────────────────────────
                 [:##1                   :vk_none] ;            esc -> q              ---------
                 [:##2                   :vk_none] ;            esc -> w              ---------
                 [:##3                   :vk_none] ;            esc -> e              ---------
                 [:##4                   :vk_none] ;            esc -> r              ---------
                 [:##5                   :vk_none] ;            esc -> t              ---------
                 ; ── row 2 ───────────────────────────────────────────────────────────────────────────
                 [:##q                   :left_command] ;       esc -> a              cmd
                 [:##w                   :left_option] ;        esc -> s              option
                 [:##e                   :left_control] ;       esc -> d              ctrl
                 [:##r                   :left_shift] ;         esc -> f              shift
                 [:##t                   :vk_none] ;            esc -> g              ---------
                 ; ── row 3 ───────────────────────────────────────────────────────────────────────────
                 [:##a                   :vk_none] ;            esc -> z              ---------
                 [:##s                   :vk_none] ;            esc -> x              ---------
                 [:##d                   :vk_none] ;            esc -> c              ---------
                 [:##f                   :vk_none] ;            esc -> v              ---------
                 [:##g                   :vk_none] ;            esc -> b              ---------
                 ; ── row 4 ───────────────────────────────────────────────────────────────────────────
               ;;[:##x                   :vk_none] ;            esc -> layer-1        ---------
                 [:##c                   :vk_none] ;            esc -> layer-2        ---------
                 [:##v                   :vk_none] ;            esc -> layer-3        ---------
                 ; ────────────────────────────────────────────────────────────────────────────────────
                 ;
                 ;  right side
                 ;
                 ; ── row 1 ───────────────────────────────────────────────────────────────────────────
                 [:##8                   :a] ;                  esc -> y              rgb toggle (combine with shift for rgb-off)
                 [:##9                   :a] ;                  esc -> u              rgb mode
                 [:##0                   :a] ;                  esc -> i              rgb hue
                 [:##hyphen              :a] ;                  esc -> o              rgb saturation
                 [:##equal_sign          :a] ;                  esc -> p              rgb value
                 ; ── row 2 ───────────────────────────────────────────────────────────────────────────
                 [:##u                   :a] ;                  esc -> h              external power toggle (combine with shift for ep-tog-off)
                 [:##i                   :a] ;                  esc -> j              previous
                 [:##o                   :a] ;                  esc -> k              - volume
                 [:##p                   :a] ;                  esc -> l              + volume
                 [:##open_bracket        :a] ;                  esc -> '              next
                 ; ── row 3 ───────────────────────────────────────────────────────────────────────────
                 [:##j                   :a] ;                  esc -> n              output toggle (combine with shift for output-usb)
                 [:##k                   :a] ;                  esc -> m              bt 0
                 [:##l                   :a] ;                  esc -> ,              bt 1
                 [:##semicolon           :a] ;                  esc -> .              bt 2
                 [:##quote               :a] ;                  esc -> /              bt 3
                 ; ── row 4 ───────────────────────────────────────────────────────────────────────────
                 [:##m                   :a] ;                  esc -> layer-4        stop
                 [:##comma               :a] ;                  esc -> layer-5        play/pause
                 [:##period              :a] ;                  esc -> layer-6        mute
                 ; ────────────────────────────────────────────────────────────────────────────────────────────
                 ]}
                 ;; ──────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────
        {:des "Layer 2 (c - space - navigation)"
         :rules [:only-keychron
                 ;
                 ; turn on layer-2 when keep pressed c -- if alone = spacebar
                 [:c ["layer-2" 1] nil {:afterup ["layer-2" 0] :alone :spacebar}]
                 :layer-2 ; only allow below commands to work if this is true
                 ;
                 ;────────────────────────────────────────────────────────────────────────────────────────────
                 ;
                 ;  left side
                 ;
                 ; ── row 1 ───────────────────────────────────────────────────────────────────────────
                 [:##1                   :vk_none] ;            space -> q              ---------
                 [:##2                   :vk_none] ;            space -> w              ---------
                 [:##3                   :vk_none] ;            space -> e              ---------
                 [:##4                   :vk_none] ;            space -> r              ---------
                 [:##5                   :vk_none] ;            space -> t              ---------
                 ; ── row 2 ───────────────────────────────────────────────────────────────────────────
                 [:##q                   :vk_none] ;            space -> a              ---------
                 [:##w                   :vk_none] ;            space -> s              ---------
                 [:##e                   :vk_none] ;            space -> d              ---------
                 [:##r                   :vk_none] ;            space -> f              ---------
                 [:##t                   :vk_none] ;            space -> g              ---------
                 ; ── row 3 ───────────────────────────────────────────────────────────────────────────
                 [:##a                   :vk_none] ;            space -> z              ---------
                 [:##s                   :vk_none] ;            space -> x              ---------
                 [:##d                   :vk_none] ;            space -> c              ---------
                 [:##f                   :vk_none] ;            space -> v              ---------
                 [:##g                   :vk_none] ;            space -> b              ---------
                 ; ── row 4 ───────────────────────────────────────────────────────────────────────────
                 [:##x                   :vk_none] ;            space -> layer-1        ---------
               ;;[:##c                   :vk_none] ;            space -> layer-2        ---------
                 [:##v                   :vk_none] ;            space -> layer-3        ---------
                 ; ────────────────────────────────────────────────────────────────────────────────────
                 ;
                 ;  right side
                 ;
                 ; ── row 1 ───────────────────────────────────────────────────────────────────────────
                 [:##8                   :vk_none] ;            space -> y              ---------
                 [:##9                   :vk_none] ;            space -> u              ---------
                 [:##0                   :vk_none] ;            space -> i              ---------
                 [:##hyphen              :vk_none] ;            space -> o              ---------
                 [:##equal_sign          :vk_none] ;            space -> p              ---------
                 ; ── row 2 ───────────────────────────────────────────────────────────────────────────
                 [:##u                   :vk_none] ;            space -> h              ---------
                 [:##i                   :vk_none] ;            space -> j              ---------
                 [:##o                   :vk_none] ;            space -> k              ---------
                 [:##p                   :vk_none] ;            space -> l              ---------
                 [:##open_bracket        :vk_none] ;            space -> '              ---------
                 ; ── row 3 ───────────────────────────────────────────────────────────────────────────
                 [:##j                   :vk_none] ;            space -> n              ---------
                 [:##k                   :vk_none] ;            space -> m              ---------
                 [:##l                   :vk_none] ;            space -> ,              ---------
                 [:##semicolon           :vk_none] ;            space -> .              ---------
                 [:##quote               :vk_none] ;            space -> /              ---------
                 ; ── row 4 ───────────────────────────────────────────────────────────────────────────
                 [:##m                   :vk_none] ;            space -> layer-4        ---------
                 [:##comma               :vk_none] ;            space -> layer-5        ---------
                 [:##period              :vk_none] ;            space -> layer-6        ---------
                 ; ────────────────────────────────────────────────────────────────────────────────────────────
                 ]}
        ;; ──────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────

        ;; ─────────────────────────────────────────────────────────────────────────────
        {:des "map all basic keys on keychron k2 v2" :rules
         [:only-keychron
          ;;
          ;; left side
          ;;
          [:1 :q]
          [:2 :w]
          [:3 :e]
          [:4 :r]
          [:5 :t]
          ;;
          [:q :a]
          [:w :s]
          [:e :d]
          [:r :f]
          [:t :g]
          ;;
          [:a :z]
          [:s :x]
          [:d :c]
          [:f :v]
          [:g :b]
          ;;
          ;; right side
          ;;
          [:8 :y]
          [:9 :u]
          [:0 :i]
          [:hyphen :o]
          [:equal_sign :p]
          ;;
          [:u :h]
          [:i :j]
          [:o :k]
          [:p :l]
          [:open_bracket :quote]
          ;;
          [:j :n]
          [:k :m]
          [:l :comma]
          [:semicolon :period]
          [:quote :slash]
          ;;
          ]}
        ;; ─────────────────────────────────────────────────────────────────────────────
        ]}
