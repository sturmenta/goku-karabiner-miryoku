 :froms {
  ;; ─────────────────────────────────────────────────────────────────────────────
  ;;
  ;;      mapping of original keymap (keychron-k2v2 - config used by me)
  ;;
  ;;      1   2   3   4   5       8   9   0   -   =
  ;;      q   w   e   r   t       u   i   o   p   [
  ;;      a   s   d   f   g       j   k   l   ;   '
  ;;              x   c   v       m   ,   .
  ;;
  ;; ─────────────────────────────────────────────────────────────────────────────
  ;;
  ;;      to -- mapped keymap
  ;;
  ;;      q   w   f   p   b       j   l   u   y   '
  ;;      a   r   s   t   g       m   n   e   i   o
  ;;      z   x   c   d   v       k   h   ,   .   /
  ;;              esc spc tab     rtn del dfw
  ;;
  ;; ─────────────────────────────────────────────────────────────────────────────

  :any_key {:any :key_code}
  :any_consumer {:any :consumer_key_code }

  ;────────────────────────────────────────────────────────────────────────────────────────────
  ;
  ;  left side
  ;
  ; ── row 1 ───────────────────────────────────────────────────────────────────────────
  :-q                     {:key :##1}
  :-w                     {:key :##2}
  :-f                     {:key :##3}
  :-p                     {:key :##4}
  :-b                     {:key :##5}
  ; ── row 2 ───────────────────────────────────────────────────────────────────────────
  :-a                     {:key :##q}
  :-r                     {:key :##w}
  :-s                     {:key :##e}
  :-t                     {:key :##r}
  :-g                     {:key :##t}
  ; ── row 3 ───────────────────────────────────────────────────────────────────────────
  :-z                     {:key :##a}
  :-x                     {:key :##s}
  :-c                     {:key :##d}
  :-d                     {:key :##f}
  :-v                     {:key :##g}
  ; ── row 4 ───────────────────────────────────────────────────────────────────────────
  :-escape                {:key :##x}
  :-spacebar              {:key :##c}
  :-tab                   {:key :##v}

  ;────────────────────────────────────────────────────────────────────────────────────────────
  ;
  ;  right side
  ;
  ; ── row 1 ───────────────────────────────────────────────────────────────────────────
  :-j                     {:key :##8}
  :-l                     {:key :##9}
  :-u                     {:key :##0}
  :-y                     {:key :##hyphen}
  :-quote                 {:key :##equal_sign}
  ; ── row 2 ───────────────────────────────────────────────────────────────────────────
  :-m                     {:key :##u}
  :-n                     {:key :##i}
  :-e                     {:key :##o}
  :-i                     {:key :##p}
  :-o                     {:key :##open_bracket}
  ; ── row 3 ───────────────────────────────────────────────────────────────────────────
  :-k                     {:key :##j}
  :-h                     {:key :##k}
  :-comma                 {:key :##l}
  :-period                {:key :##semicolon}
  :-slash                 {:key :##quote}
  ; ── row 4 ───────────────────────────────────────────────────────────────────────────
  :-return_or_enter       {:key :##m}
  :-delete_or_backspace   {:key :##comma}
  :-delete_forward        {:key :##period}
 }

