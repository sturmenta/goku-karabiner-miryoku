 :froms {
  ;; ─────────────────────────────────────────────────────────────────────────────
  ;;
  ;;      mapping of original keymap (keychron-k2v2 - config used by me)
  ;;
  ;;      1   2   3   4   5       8   9   0   -   =
  ;;      q   w   e   r   t       u   i   o   p   [
  ;;      a   s   d   f   g       j   k   l   ;   '
  ;;              x   c   v       m   ,   .
  ;;
  ;; ─────────────────────────────────────────────────────────────────────────────
  ;;
  ;;      to -- mapped keymap
  ;;
  ;;      q   w   e   r   t       y   u   i   o   p
  ;;      a   s   d   f   g       h   j   k   l   '
  ;;      z   x   c   v   b       n   m   ,   .   /
  ;;              shf ctr opt     cmd l1  l2
  ;;
  ;; ─────────────────────────────────────────────────────────────────────────────

  :any_key {:any :key_code}

  ;────────────────────────────────────────────────────────────────────────────────────────────
  ;
  ;  left side
  ;
  ; ── row 1 ───────────────────────────────────────────────────────────────────────────
  :-q                     {:key :##1}
  :-w                     {:key :##2}
  :-e                     {:key :##3}
  :-r                     {:key :##4}
  :-t                     {:key :##5}
  ; ── row 2 ───────────────────────────────────────────────────────────────────────────
  :-a                     {:key :##q}
  :-s                     {:key :##w}
  :-d                     {:key :##e}
  :-f                     {:key :##r}
  :-g                     {:key :##t}
  ; ── row 3 ───────────────────────────────────────────────────────────────────────────
  :-z                     {:key :##a}
  :-x                     {:key :##s}
  :-c                     {:key :##d}
  :-v                     {:key :##f}
  :-b                     {:key :##g}
  ; ── row 4 ───────────────────────────────────────────────────────────────────────────
  :-left_shift            {:key :##x}
  :-left_control          {:key :##c}
  :-left_option           {:key :##v}

  ;────────────────────────────────────────────────────────────────────────────────────────────
  ;
  ;  right side
  ;
  ; ── row 1 ───────────────────────────────────────────────────────────────────────────
  :-y                     {:key :##8}
  :-u                     {:key :##9}
  :-i                     {:key :##0}
  :-o                     {:key :##hyphen}
  :-p                     {:key :##equal_sign}
  ; ── row 2 ───────────────────────────────────────────────────────────────────────────
  :-h                     {:key :##u}
  :-j                     {:key :##i}
  :-k                     {:key :##o}
  :-l                     {:key :##p}
  :-quote                 {:key :##open_bracket}
  ; ── row 3 ───────────────────────────────────────────────────────────────────────────
  :-n                     {:key :##j}
  :-m                     {:key :##k}
  :-comma                 {:key :##l}
  :-period                {:key :##semicolon}
  :-slash                 {:key :##quote}
  ; ── row 4 ───────────────────────────────────────────────────────────────────────────
  :-left_command          {:key :##m}
  :-l1                    {:key :##comma}
  :-l2                    {:key :##period}
 }

 :tos {
    :-f1  {:key :display_brightness_decrement}
    :-f2  {:key :display_brightness_increment}
    :-f3  {:key :rewind}
    :-f4  {:key :play_or_pause}
    :-f5  {:key :fastforward}
    :-f6  {:key :mute}
    :-f7  {:key :volume_decrement}
    :-f8  {:key :volume_increment}
    ;; :-f9  {:key :vk_none}
    ;; :-f10 {:key :vk_none}
    ;; :-f11 {:key :vk_none}
    ;; :-f12 {:key :vk_none}
 }

 :main [

        ;; ─────────────────────────────────────────────────────────────────────────────
        { :des "check current keyboard and set karabiner_on" :rules [
          [:condi :!karabiner_on :keychron_k2v2]
            [:any_key ["karabiner_on" 1]]
        ]}
        ;; ─────────────────────────────────────────────────────────────────────────────

        ;NOTE: When adding a new layer, if you want it to be able to cross with an old one, you must add the name negated (:!new_name) to all other mod-tap layer conditions
        ;; ─────────────────────────────────────────────────────────────────────────────
        { :des "modifier layers" :rules [
          [:condi :karabiner_on]

          ;────────────────────────────────────────────────────────────────────────────────────────────
          ;
          ;  right side
          ;
          ; ── layer_1 (numbers and symbols) ───────────────────────────────────────────────────────────────────────────
           [:-l1 nil [
              :!layer_2 ;without :!layer_1
            ] {:held {:set [
            "layer_1" 1] :repeat false} :afterup {:set [
            "layer_1" 0]}}]

          ; ── layer_2 (fn layer) ───────────────────────────────────────────────────────────────────────────
           [:-l2 nil [
              :!layer_1 ;without :!layer_2
            ] {:held {:set [
            "layer_2" 1] :repeat false} :afterup {:set [
            "layer_2" 0]}}]

          ]
         }
        ;; ─────────────────────────────────────────────────────────────────────────────

        ;; ──────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────

        ;; ─────────────────────────────────────────────────────────────────────────────
        { :des "layer_1 - (numbers and symbols) (spacebar)" :rules
         [
          [:condi :layer_1 :karabiner_on]

          ;────────────────────────────────────────────────────────────────────────────────────────────
          ;
          ;  left side
          ;
          ; ── row 1 ───────────────────────────────────────────────────────────────────────────
          [:-q                          :1];                                    layer_1 -> q              ---------
          [:-w                          :2];                                    layer_1 -> w              ---------
          [:-e                          :3];                                    layer_1 -> e              ---------
          [:-r                          :4];                                    layer_1 -> r              ---------
          [:-t                          :5];                                    layer_1 -> t              ---------
          ; ── row 2 ───────────────────────────────────────────────────────────────────────────
          [:-a                          :grave_accent_and_tilde];               layer_1 -> a              ---------
         ;[:-s                          :vk_none];                              layer_1 -> s              ---------
         ;[:-d                          :vk_none];                              layer_1 -> d              ---------
         ;[:-f                          :vk_none];                              layer_1 -> f              ---------
         ;[:-g                          :vk_none];                              layer_1 -> g              ---------
          ; ── row 3 ───────────────────────────────────────────────────────────────────────────
         ;[:-z                          :vk_none];                              layer_1 -> z              ---------
         ;[:-x                          :vk_none];                              layer_1 -> x              ---------
         ;[:-c                          :vk_none];                              layer_1 -> c              ---------
         ;[:-v                          :vk_none];                              layer_1 -> v              ---------
         ;[:-b                          :vk_none];                              layer_1 -> b              ---------
          ; ── row 4 ───────────────────────────────────────────────────────────────────────────
          [:-left_shift                 :left_shift];                           layer_1 -> shf            ---------
          [:-left_control               :left_control];                         layer_1 -> ctr            ---------
          [:-left_option                :left_option];                          layer_1 -> opt            ---------

          ;────────────────────────────────────────────────────────────────────────────────────────────
          ;
          ;  right side
          ;
          ; ── row 1 ───────────────────────────────────────────────────────────────────────────
          [:-y                          :6];                                    layer_1 -> y              ---------
          [:-u                          :7];                                    layer_1 -> u              ---------
          [:-i                          :8];                                    layer_1 -> i              ---------
          [:-o                          :9];                                    layer_1 -> o              ---------
          [:-p                          :0];                                    layer_1 -> p              ---------
          ; ── row 2 ───────────────────────────────────────────────────────────────────────────
          [:-h                          :left_arrow];                           layer_1 -> h              ---------
          [:-j                          :down_arrow];                           layer_1 -> j              ---------
          [:-k                          :up_arrow];                             layer_1 -> k              ---------
          [:-l                          :right_arrow];                          layer_1 -> l              ---------
          [:-quote                      :semicolon];                            layer_1 -> '              ---------
          ; ── row 3 ───────────────────────────────────────────────────────────────────────────
          [:-n                          :hyphen];                               layer_1 -> n              ---------
          [:-m                          :equal_sign];                           layer_1 -> m              ---------
          [:-comma                      :open_bracket];                         layer_1 -> ,              ---------
          [:-period                     :close_bracket];                        layer_1 -> .              ---------
          [:-slash                      :backslash];                            layer_1 -> /              ---------
          ; ── row 4 ───────────────────────────────────────────────────────────────────────────
          [:-left_command               :left_command];                         layer_1 -> cmd            ---------
         ;[:-l1                         :vk_none];                              layer_1 -> l1             (already used by this layer)
         ;[:-l2                         :vk_none];                              layer_1 -> l2             ---------

          ; ────────────────────────────────────────────────────────────────────────────────────
          ; ignore another keys
          [:any_key [:vk_none]]
         ]}
        ;; ─────────────────────────────────────────────────────────────────────────────

        ;; ─────────────────────────────────────────────────────────────────────────────
        { :des "layer_2 - (fn layer) (delete_or_backspace)" :rules
         [
          [:condi :layer_2 :karabiner_on]

          ;────────────────────────────────────────────────────────────────────────────────────────────
          ;
          ;  left side
          ;
          ; ── row 1 ───────────────────────────────────────────────────────────────────────────
          [:-q                          :escape];                              layer_2 -> q              ---------
          [:-w                          :tab];                                 layer_2 -> w              ---------
         ;[:-e                          :vk_none];                             layer_2 -> e              ---------
         ;[:-r                          :vk_none];                             layer_2 -> r              ---------
         ;[:-t                          :vk_none];                             layer_2 -> t              ---------
          ; ── row 2 ───────────────────────────────────────────────────────────────────────────
          [:-a                          :-f1];                                 layer_2 -> a              ---------
          [:-s                          :-f2];                                 layer_2 -> s              ---------
          [:-d                          :-f3];                                 layer_2 -> d              ---------
          [:-f                          :-f4];                                 layer_2 -> f              ---------
          [:-g                          :-f5];                                 layer_2 -> g              ---------
          ; ── row 3 ───────────────────────────────────────────────────────────────────────────
          [:-z                          :-f6];                                 layer_2 -> z              ---------
          [:-x                          :-f7];                                 layer_2 -> x              ---------
          [:-c                          :-f8];                                 layer_2 -> c              ---------
          [:-v                          :-f9];                                 layer_2 -> v              ---------
          [:-b                          :-f10];                                layer_2 -> b              ---------
          ; ── row 4 ───────────────────────────────────────────────────────────────────────────
          [:-left_shift                 :left_shift];                          layer_2 -> shf            ---------
          [:-left_control               :left_control];                        layer_2 -> ctr            ---------
          [:-left_option                :left_option];                         layer_2 -> opt            ---------

          ;────────────────────────────────────────────────────────────────────────────────────────────
          ;
          ;  right side
          ;
          ; ── row 1 ───────────────────────────────────────────────────────────────────────────
          [:-y                          :return_or_enter];                     layer_2 -> y              ---------
          [:-u                          :spacebar];                            layer_2 -> u              ---------
         ;[:-i                          :vk_none];                             layer_2 -> i              ---------
         ;[:-o                          :vk_none];                             layer_2 -> o              ---------
          [:-p                          :delete_or_backspace];                 layer_2 -> p              ---------
          ; ── row 2 ───────────────────────────────────────────────────────────────────────────
          [:-h                          :!Creturn_or_enter];                   layer_2 -> h              ---------
          [:-j                          :!Cspacebar];                          layer_2 -> j              ---------
         ;[:-k                          :vk_none];                             layer_2 -> k              ---------
         ;[:-l                          :vk_none];                             layer_2 -> l              ---------
          [:-quote                      :!Cdelete_or_backspace];               layer_2 -> '              ---------
          ; ── row 3 ───────────────────────────────────────────────────────────────────────────
          [:-n                          :-f11];                                layer_2 -> n              ---------
          [:-m                          :-f12];                                layer_2 -> m              ---------
         ;[:-comma                      :vk_none];                             layer_2 -> ,              ---------
         ;[:-period                     :vk_none];                             layer_2 -> .              ---------
         ;[:-slash                      :vk_none];                             layer_2 -> /              ---------
          ; ── row 4 ───────────────────────────────────────────────────────────────────────────
          [:-left_command               :left_command];                        layer_2 -> cmd            ---------
         ;[:-l1                         :vk_none];                             layer_2 -> l1             ---------
         ;[:-l2                         :vk_none];                             layer_2 -> l2             (already used by this layer)

          ; ────────────────────────────────────────────────────────────────────────────────────
          ; ignore another keys
          [:any_key [:vk_none]]
         ]}
        ;; ─────────────────────────────────────────────────────────────────────────────

        ;; ──────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────────

        ;; ─────────────────────────────────────────────────────────────────────────────
        {:des "Base characters" :rules
         [;
          ; use the mappings from "froms" to map all keys
          ;
          [:condi :karabiner_on]
          ;
          ;; ───────────────────────────────
          ;;
          ;; left side
          ;;
          ;;
          [:-q                          :q]
          [:-w                          :w]
          [:-e                          :e]
          [:-r                          :r]
          [:-t                          :t]
          ;; ───────────────────────────────
          [:-a                          :a]
          [:-s                          :s]
          [:-d                          :d]
          [:-f                          :f]
          [:-g                          :g]
          ;; ───────────────────────────────
          [:-z                          :z]
          [:-x                          :x]
          [:-c                          :c]
          [:-v                          :v]
          [:-b                          :b]
          ;;  ───────────────────────────────
          [:-left_shift                 :left_shift]
          [:-left_control               :left_control]
          [:-left_option                :left_option]

          ;;  ───────────────────────────────
          ;;
          ;; right side
          ;;
          ;;
          [:-y                          :y]
          [:-u                          :u]
          [:-i                          :i]
          [:-o                          :o]
          [:-p                          :p]
          ;; ───────────────────────────────
          [:-h                          :h]
          [:-j                          :j]
          [:-k                          :k]
          [:-l                          :l]
          [:-quote                      :quote]
          ;; ───────────────────────────────
          [:-n                          :n]
          [:-m                          :m]
          [:-comma                      :comma]
          [:-period                     :period]
          [:-slash                      :slash]
          ;; ───────────────────────────────
          [:-left_command               :left_command]
          [:-l1                         :vk_none]
          [:-l2                         :vk_none]

          ; ignore another keys
          [:any_key [:vk_none]]
          ]}
        ;; ─────────────────────────────────────────────────────────────────────────────
       ]
 }
